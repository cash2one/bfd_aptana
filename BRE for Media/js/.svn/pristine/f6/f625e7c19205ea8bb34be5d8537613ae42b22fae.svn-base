	$.template('t1', '<tr>' +
    '<td class="center"><input type="checkbox" class="" /></td>' +
    '<td><span class="border"><img src="${img_url}" alt="" /></span></td>' +
    '<td>' +
    '<a href="${url}" class="topic">' +
    '<p class="info">${title}</p>' +
    '<p class="link">${uri}</p>' +

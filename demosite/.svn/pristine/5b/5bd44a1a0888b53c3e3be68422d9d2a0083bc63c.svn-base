            div.control-up{
				top:50px;
            }
			div.control-down{
				bottom:0;
			}
			div.control-up , div.control-down{
				position:fixed;
				width:100px;
				height:100px;
				z-index:99;
				right:0;
			}
			div.arrow {
                width: 80px;
                height: 80px;
                cursor: pointer;
                -webkit-border-radius: 40px;
                -moz-border-radius: 40px;
                border-radius: 40px;
            }
            
            div#control-down{
                background: rgba(255, 255, 255, 0.2) url('../images/sprites-4.png') -248px -150px no-repeat;
            }
            
            div#control-up{
                background: rgba(255, 255, 255, 0.2) url('../images/sprites-4.png') -248px -81px no-repeat;
            }

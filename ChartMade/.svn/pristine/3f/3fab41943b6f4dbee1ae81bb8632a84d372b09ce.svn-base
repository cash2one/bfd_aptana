                return "<center><b>" + this.point.name + "</b></center><br/><span>值：" + this.point.y + "</span>";
            }
        },
        series : [{
            data : [],
            dataLabels : {
                enabled : false,
                color : 'white',
                formatter : function(dataLabelOptions) {
                    return this.point.options.key.toUpperCase();
                },
                style : {
                    fontWeight : 'bold'
                }
            },
            name : '',

<script type="text/javascript">
	function register(){
		$.post("/wbportal/user/register.action", {"user.inviteCode":$('#inviteCode').val(),"user.name":$('#name').val(),"user.password":$('#password').val(),"user.email":$('#email').val(),"user.phone":$('#phone').val()},
				function(data){
					if(data=='1'){
						//alert('注册成功');
						window.document.location.href = "./main.html";
					}else if(data == '2'){
						alert('用户名已存在');
					}else if(data == '3'){
						alert('邀请码不正确或已过期');
					}
				}
			);
	}
</script>

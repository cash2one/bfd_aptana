/**
 * @author Administrator
 */
$(function(){
	if($('#nameinput').val()!==''){
		$('#namelabel').hide()
	}
	$('#nameinput').focus(function(){
		$('#namelabel').hide()
	}).blur(function(){
		if($(this).val()==''){
			$('#namelabel').show()
		}
	})
	$('#namelabel').click(function(){
		$(this).hide()
		$('#nameinput').focus()
	})
})
